{
  "env": {
    "node": true,
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "globals": {
    "kaplay": "readonly",
    "onKeyDown": "readonly",
    "onKeyPress": "readonly",
    "scene": "readonly",
    "loadSprite": "readonly",
    "add": "readonly",
    "sprite": "readonly",
    "pos": "readonly",
    "anchor": "readonly",
    "color": "readonly",
    "opacity": "readonly",
    "outline": "readonly",
    "rgb": "readonly",
    "area": "readonly",
    "text": "readonly",
    "rect": "readonly",
    "height": "readonly",
    "width": "readonly",
    "body": "readonly",
    "wait": "readonly",
    "destroyAll": "readonly",
    "go": "readonly",
    "get": "readonly",
    "scale": "readonly",
    "THREE": "readonly",
    "requestAnimationFrame": "readonly",
    "GeometryUtils": "readonly",
    "Sprite": "readonly",
    "NestSprite": "readonly",
    "TreeSprite": "readonly",
    "LaluSprite": "readonly",
    "createSprite": "readonly"
  },
  "rules": {
    "no-unused-vars": "off",
    "no-console": "warn",
    "prefer-const": "error",
    "eqeqeq": ["error", "always"],
    "curly": ["error", "all"]
  }
}
